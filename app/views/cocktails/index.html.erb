  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1496318447583-f524534e9ce1?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1405&q=80);">
  <div class="container">
    <h1>Cocktail Maestro</h1>
    <p>Change your life and learn to make cocktails</p>
    <a href="#"><%= link_to 'New Cocktail', new_cocktail_path, {class: "btn btn-primary"}%></a>
  </div>
</div>

<div class="container">
<div class="card-columns">

  <% @cocktails.each do |cocktail| %>
      <div class="card">

        <div class="card-body">
          <img class="card-img-top" src="https://source.unsplash.com/random" alt="Card image cap">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <p class="card-text max-lines"><%= cocktail.description %></p>


          <%= link_to cocktail, {class: "eye"} do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
              <circle cx="12" cy="12" r="2" />
              <path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7" />
            </svg>
          <% end %>

          <%= link_to cocktail_path(cocktail),  method: :delete, data: { confirm: 'Are you sure?' } do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash trashy" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
              <line x1="4" y1="7" x2="20" y2="7" />
              <line x1="10" y1="11" x2="10" y2="17" />
              <line x1="14" y1="11" x2="14" y2="17" />
              <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
              <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
            </svg>
          <% end %>

        </div>
    </div>
  <% end %>

</div>
</div>



