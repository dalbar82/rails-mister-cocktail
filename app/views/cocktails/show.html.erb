

<div class="container-fluid mainContainer">
  <div class="row">

    <div id="listy" class="col-4">
      <div class="banner showBanner" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)), url(https://images.unsplash.com/photo-1551538827-9c037cb4f32a?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=701&q=80)"></div>
    </div>

    <div class="col-8 cDescription">
      <h1><%= @cocktail.name %></h1>
      <p> <%= @cocktail.description %> </p>
    </div>

  </div>
</div>

<div class="container-fluid bodyContainer">
  <div class="row">

    <ul class="list-group col-4">
       <h1 class="ingListHeader"><em>Ingredients</em></h1>
        <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item ingList"><%= dose.description %> <%= dose.ingredient.name %></li>
        <% end %>
      </ul>
   <!--    <%= link_to 'Back', cocktails_path, class: "btn btn-link" %> -->

    <div class="col-8 formLabels">
      <h1><em>Add Ingredients</em></h1>
        <%= simple_form_for [ @cocktail, @dose ] do |form| %>
                 <%= form.input :description%>
                 <%= form.association :ingredient, input_html: { class: 'select2' }%>
          <%= form.submit class: "btn btn-link btnBlueText"  %>
        <% end %>
    </div>

  </div>
</div>






