 <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4))">
  <div class="container justify-content-center">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="cards">
  <% @cocktail.doses.each do |dose| %>
    <div class="dose-card-cont">
      <div class="dose-card">
        <h3><%= dose.description %></h3>
         <h3><%= dose.ingredient_id %></h3>
        <%= link_to dose_path(dose), method: "delete", data: {confirm: "Are you sure?"}, class: "card-remove-link" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-plus" width="25" height="25" viewBox="0 0 24 24" stroke-width="1.5" stroke="black" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <line x1="12" y1="5" x2="12" y2="19" />
            <line x1="5" y1="12" x2="19" y2="12" />
          </svg>
        <% end %>
      </div>
    </div>
  <% end %>
</div>



<h3> <%= @cocktail.name %> </h3>
<h3> <%= @cocktail.description %> </h3>

<div class="container justify-content-center">
  <div class="row">
    <div class="col-4 mx-auto">
      <%= simple_form_for [ @cocktail, @dose ] do |form| %>
               <%= form.input :description%>
               <%= form.association :ingredient, { class: 'select2' }%>
        <%= form.submit class: "btn btn-primary"  %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'Back', cocktails_path %>

